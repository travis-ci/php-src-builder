#!/bin/bash
set -o xtrace
set -o errexit
source $(dirname $0)/compile-extensions-common

travis_time_start

sudo apt-get install libssh2-1-dev

if [[ $VERSION =~ ^7 ]]; then
	pecl_install ssh2-alpha </dev/null
elif [[ $VERSION =~ ^master$ ]]; then
	echo "skipping ssh2"
	# it's not yet compatible with master
else
	pecl_install ssh2-0.13 </dev/null
fi

travis_time_finish
