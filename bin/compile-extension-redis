#!/bin/bash
set -o xtrace
set -o errexit
source $(dirname $0)/compile-extensions-common

if [[ $VERSION =~ ^master$ || $VERSION =~ snapshot$ || $VERSION = 7\.2 ]]; then
	git clone https://github.com/phpredis/phpredis.git
	pushd phpredis
	git checkout php7
        phpize
	./configure && make && make install || exit 1
	popd
elif [[ $VERSION =~ ^7 ]]; then
	pecl_install redis
else
	pecl_install redis-2.2.8
fi
