#!/bin/bash
set -o xtrace
set -o errexit
source $(dirname $0)/compile-extensions-common

function install_memcache() {
	pushd /tmp
	wget https://launchpad.net/libmemcached/1.0/1.0.18/+download/libmemcached-1.0.18.tar.gz
	tar xzf libmemcached-1.0.18.tar.gz
	pushd libmemcached-1.0.18
	./configure --prefix=$INSTALL_DEST/$VERSION && make && sudo make install
	popd
	popd
}

travis_time_start

install_memcache

if [[ $VERSION =~ ^7 || $VERSION =~ ^8 || $VERSION =~ ^master$ ]]; then
	pecl download memcached-3.2.0
	tar zxvf memcached-3.2.0.tar && pushd memcached*/
	make clean || true
else
	pecl download memcached-2.2.0
	tar zxvf memcached*.tgz && pushd memcached*/
	make clean || true
fi
phpize
./configure --with-libmemcached-dir=$INSTALL_DEST/$VERSION && make && sudo make install
popd

travis_time_finish
